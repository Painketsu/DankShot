{ 
    "manifest_version": 2,
    "name": "DankShot",
    "version": "7.0",
    "description": "Clip streams (Twitch, Kick, Rumble)",

    "background": { 
        "scripts": ["background.js"]
    },

    "permissions": [
        "webRequest",
        "downloads",
        "downloads.open",
        "tabs",
        "nativeMessaging",
        "contextMenus",
        "<all_urls>"
    ],
    "minimum_chrome_version": "31",
    "icons": {
        "48": "icons/64_002.png",
        "96": "icons/64_002.png"
    },
      
    "browser_action": {
        "default_icon": {
            "64": "icons/64_002.png"
        }
    }
}
